<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Constraint Layout"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:id="@+id/button2"/>
    <Button
            android:text="@android:string/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="20dp" app:layout_constraintBaseline_toBaselineOf="@+id/button2"/>
    <MultiAutoCompleteTextView
            android:text="Previous clients I have done work for include Casey's Auction Inc, MicroPower Plus, Nomad Computer Services.   My paralysis has created a more technical drive of projects for both a personal level and for the disabled community. This has helped me come up with several ideas including a current project I am working on www.whowherehow.org (still in beta), along with other things like learning more of the programming arduino, and raspberry pi computers to make devices to assist the disabled. "
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/multiAutoCompleteTextView"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.05"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintVertical_bias="0.0" android:scrollbars="vertical"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ball_100x100"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/multiAutoCompleteTextView"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.606"/>
</android.support.constraint.ConstraintLayout>